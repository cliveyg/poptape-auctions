-module(main_db_server).
-behaviour(gen_server).

%------------------------------------------------------------------------------
%
% the module for our the auction application main database. this is to help
% track all auctions and statuses in the system
%
%------------------------------------------------------------------------------

% api for module
-export([start_link/0]).

% standard gen_server callbacks
-export([init/1,
         handle_call/3,
         handle_cast/2,
         handle_info/2,
         terminate/2,
         code_change/3]).

% main_db_server api
-export([
         get_auction/1,
         get_all_auctions/0,
         create_auction_rec/1,
         update_auction_rec/2
        ]).

-define(SERVER, ?MODULE).

-record(state, {}).

% start the server
start_link() ->
    gen_server:start_link({local, ?SERVER}, ?MODULE, [], []).


